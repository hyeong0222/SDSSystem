<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.B17.sdssystem.manager.assignment.assign.AssignFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <TextView
                android:text="Select Project :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="137dp"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/textView8" android:textSize="20sp"
                android:textStyle="bold" android:paddingLeft="10dp"/>
        <Spinner android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:id="@+id/spinner_project" app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="10dp"/>
        <TextView
                android:text="Select Task :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="137dp"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/textView12" android:textSize="20sp"
                android:textStyle="bold" android:paddingLeft="10dp"/>
        <Spinner android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:id="@+id/spinner_task" app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="10dp"/>
        <TextView
                android:text="Select Subtask :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="137dp"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/textView14" android:textSize="20sp"
                android:textStyle="bold" android:paddingLeft="10dp"/>
        <Spinner android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:id="@+id/spinner_subtask" app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="10dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
