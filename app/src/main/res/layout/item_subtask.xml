<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <android.support.v7.widget.CardView android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:elevation="10dp"
                                        app:cardCornerRadius="45dp"
                                        app:cardBackgroundColor="@color/rgn_background" android:id="@+id/cardView3"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:background="@android:color/white">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:id="@+id/tv_subtaskname"
                    app:layout_constraintStart_toStartOf="@+id/tv_subtaskid" android:layout_marginTop="14dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_subtaskid"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_subtaskid"
                    android:textColor="@android:color/black"

                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="32dp" android:layout_marginStart="55dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_subtaskstatus"
                    android:textColor="@android:color/black"

                    app:layout_constraintStart_toStartOf="@+id/tv_subtaskname" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_subtaskname"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_subtaskdesc"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="@+id/tv_subtaskstatus" android:layout_marginTop="18dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_subtaskstatus"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_st_startdate"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="@+id/tv_subtaskdesc" android:layout_marginTop="17dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_subtaskdesc"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_st_enddate"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="@+id/tv_st_startdate" android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_st_startdate"/>

        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>