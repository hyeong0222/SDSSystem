<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/edit_name"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:padding="5dp"
              android:layout_gravity="center" android:orientation="vertical" android:background="@color/toolbar">

    <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="20dp">


        <TextView
                android:id="@+id/lbl_project_name" android:text="Project Name"
                android:layout_marginTop="20dp"
                android:layout_width="300dp" android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/tv_project_name"
                android:layout_width="300dp" android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginTop="50dp"
                android:imeOptions="actionDone"/>
        <TextView
                android:id="@+id/lbl_project_status" android:text="Project Status"
                android:layout_marginTop="100dp"
                android:layout_width="300dp" android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/tv_project_status"
                android:layout_width="300dp" android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginTop="130dp"
                android:imeOptions="actionDone"/>
        <TextView
                android:id="@+id/lbl_project_desc" android:text="Project Description"
                android:layout_marginTop="180dp"
                android:layout_width="300dp" android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/tv_project_desc"
                android:layout_width="300dp" android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginTop="200dp"
                android:imeOptions="actionDone"/>
        <TextView
                android:id="@+id/lbl_start_date" android:text="Start Date"
                android:layout_marginTop="260dp"
                android:layout_width="300dp" android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/tv_start_date"
                android:layout_width="300dp" android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginTop="300dp"
                android:imeOptions="actionDone"/>
        <Button
                android:text="Select Start Date"
                android:layout_width="300dp"
                android:layout_marginTop="350dp"
                android:layout_height="wrap_content" android:id="@+id/btn_start"/>
        <TextView
                android:id="@+id/lbl_end_date" android:text="End Date"
                android:layout_marginTop="410dp"
                android:layout_width="300dp" android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/tv_end_date"
                android:layout_width="300dp" android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginTop="440dp"
                android:imeOptions="actionDone"/>
        <Button
                android:text="Select End Date"
                android:layout_width="300dp"
                android:layout_marginTop="490dp"
                android:layout_height="wrap_content" android:id="@+id/btn_end"/>
        <Button
                android:text="Add"

                android:layout_width="300dp"
                android:layout_height="wrap_content" android:id="@+id/btn_addProject" android:layout_marginTop="550dp"/>

    </android.support.v7.widget.CardView>


</LinearLayout>