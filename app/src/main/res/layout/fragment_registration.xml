<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".authentication.RegistrationFragment"
                                             android:background="@color/rgn_background"
                                             android:id="@+id/regFragCon">

    <EditText
            android:layout_width="250dp"
            android:gravity="center"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_fname"
            android:hint="first name"
            android:background="@android:color/white"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="81dp" android:layout_marginBottom="43dp"
            app:layout_constraintBottom_toTopOf="@+id/et_lname"/>
    <EditText
            android:layout_width="250dp"
            android:gravity="center"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_lname"
            android:hint="last name "
            android:background="@android:color/white"

            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/et_fname"
            android:layout_marginBottom="35dp" app:layout_constraintBottom_toTopOf="@+id/et_email"/>


    <EditText
            android:layout_width="250dp"
            android:gravity="center"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/et_email"
            android:hint="email address "
            android:background="@android:color/white"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/et_lname"
            android:layout_marginBottom="33dp" app:layout_constraintBottom_toTopOf="@+id/et_phone"/>

    <EditText
            android:layout_width="250dp"
            android:gravity="center"
            android:layout_height="40dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/et_phone"
            android:hint="Mobile Number"
            android:background="@android:color/white"

            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/et_email"
            android:layout_marginBottom="35dp" app:layout_constraintBottom_toTopOf="@+id/et_password"/>

    <EditText
            android:layout_width="250dp"
            android:gravity="center"
            android:layout_height="40dp"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/et_password"
            android:hint="password"
            android:background="@android:color/white"

            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/et_phone"
            android:layout_marginBottom="33dp" app:layout_constraintBottom_toTopOf="@+id/et_comSize"/>
    <EditText
            android:layout_width="250dp"
            android:gravity="center"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_comSize"
            android:hint="Company Size"
            android:background="@android:color/white"

            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/et_password"
            android:layout_marginBottom="30dp" app:layout_constraintBottom_toTopOf="@+id/rdn_developer"/>
    <Button
            android:text="Register"
            android:layout_height="40dp"
            android:layout_width="250dp"
            android:id="@+id/btn_Register"
            android:shadowRadius="@android:integer/config_shortAnimTime"
            android:fadingEdge="vertical"
            android:elevation="4dp"
            app:layout_constraintTop_toBottomOf="@+id/rdn_developer"
            android:layout_marginBottom="12dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_gotAccount" app:layout_constraintStart_toStartOf="parent"
            android:background="@color/toolbar"/>
    <TextView
            android:text="Already Have an Account? Click Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_gotAccount" android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/btn_Register"
            android:layout_marginEnd="19dp" android:layout_marginBottom="68dp"
            app:layout_constraintEnd_toEndOf="@+id/btn_Register"/>

    <RadioButton
            android:text="Manager"
            android:layout_width="100dp"
            android:layout_height="30dp" android:id="@+id/rdn_manager"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/et_comSize"/>
    <RadioButton
            android:text="Developer"
            android:layout_width="100dp"
            android:layout_height="30dp" android:id="@+id/rdn_developer"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/rdn_manager"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/et_comSize"
            android:layout_marginBottom="30dp" app:layout_constraintBottom_toTopOf="@+id/btn_Register"
            app:layout_constraintHorizontal_bias="0.394"/>


</android.support.constraint.ConstraintLayout>