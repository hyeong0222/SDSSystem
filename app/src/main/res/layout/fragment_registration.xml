<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".authentication.RegistrationFragment"
              android:background="@color/rgn_background"
              android:orientation="vertical"
              android:id="@+id/regFragCon">


    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="90dp" android:id="@+id/et_fname" android:textColorHint="@android:color/white">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:hint="first name "/>
        <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="@android:color/white"
                android:layout_height="match_parent" android:id="@+id/et_lname">

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="@android:color/white"
                    android:id="@+id/et_email">

                <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:textColorHint="@android:color/white"
                        android:layout_height="match_parent" android:id="@+id/et_phone">

                    <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white"
                            android:layout_height="match_parent" android:id="@+id/et_password">

                        <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:textColor="@android:color/white"
                                android:textColorHint="@android:color/white"
                                android:layout_height="match_parent" android:id="@+id/et_comSize">
<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
android:layout_marginTop="20dp">
    <RadioButton
            android:text="Manager"
            android:layout_width="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content" android:id="@+id/rdn_manager"
            android:layout_weight="1" android:textColor="@android:color/white"/>
    <RadioButton
            android:text="Developer "
            android:layout_width="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_height="wrap_content" android:id="@+id/rdn_developer"
            android:layout_weight="1" android:textColor="@android:color/white"/>

</LinearLayout>

                            <android.support.design.widget.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:textColorHint="@android:color/white"
                                    android:layout_height="wrap_content"
                                    android:textColor="@android:color/white"
                                    android:hint="Company Size"/>
                            <Button
                                    android:text="Register"
                                    android:layout_width="match_parent"
                                    android:layout_marginTop="40dp"
                                    android:layout_height="34dp" android:id="@+id/btn_Register"
                                    android:background="@color/toolbar"/>
                            <TextView
                                    android:text="Already got an Account? Click Here"
                                    android:layout_width="match_parent"
                                    android:textAlignment="center"
                                    android:gravity="center"
                                    android:layout_height="wrap_content" android:id="@+id/tv_gotAccount"
                                    />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:textColorHint="@android:color/white"
                                android:hint="password"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@android:color/white"
                            android:textColor="@android:color/white"
                            android:hint="Mobile"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:hint="email Address"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:hint="last name "/>
        </android.support.design.widget.TextInputLayout>
    </android.support.design.widget.TextInputLayout>
</LinearLayout>