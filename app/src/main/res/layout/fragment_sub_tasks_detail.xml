<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".developer.viewsubtask.SubTasksDetailFragment"
                                             android:id="@+id/frameLayout">
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_details"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="98dp" android:layout_marginStart="76dp"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_marginTop="82dp"
            app:layout_constraintTop_toBottomOf="@+id/des" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_date"
            app:layout_constraintStart_toStartOf="@+id/tv_details" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_details"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/end_date"
            android:layout_marginStart="70dp" app:layout_constraintStart_toEndOf="@+id/start_date"
            android:layout_marginBottom="25dp" app:layout_constraintBottom_toTopOf="@+id/des"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/des" app:layout_constraintStart_toStartOf="@+id/start_date"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/end_date"
            android:layout_marginEnd="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/start_date"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="34dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner"/>
</android.support.constraint.ConstraintLayout>