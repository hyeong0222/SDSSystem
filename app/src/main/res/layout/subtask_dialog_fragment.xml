<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:elevation="10dp"
              android:orientation="vertical" android:padding="5dp" android:background="@color/toolbar">

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="10dp" android:background="@android:color/white"
                                        app:cardBackgroundColor="#FCFCFC">


        <TextView
                android:text="Subtask Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView33" android:textSize="20sp"
                android:textStyle="bold" android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_marginTop="50dp"
                android:id="@+id/et_subtaskname" android:hint="Please enter the  subtask name:"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="100dp">
            <TextView
                    android:text="Start Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="1"
                    android:textSize="20sp" android:textStyle="bold"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
            <TextView
                    android:text="End Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="1"
                    android:textSize="20sp" android:textStyle="bold"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="140dp"
                android:layout_height="wrap_content">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/et_startdate" android:layout_weight="1" android:hint="Enter Start Date:"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/et_enddate" android:layout_weight="1" android:hint="Enter End Date:"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="190dp"
                android:layout_height="match_parent">
            <Button
                    android:text="SELECT START DATE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_startdate" android:layout_weight="1"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
            <Button
                    android:text="SELECT END DATE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_endDate" android:layout_weight="1"
                    android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
        </LinearLayout>
        <TextView
                android:text="Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView6" android:textSize="20sp"
                android:textStyle="bold" android:layout_marginTop="250dp"
                android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_marginTop="280dp"
                android:id="@+id/et_subtask_desc" android:hint="Enter Description:" android:alpha="1"
                android:layout_marginBottom="10dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
        <Button
                android:text="Save"
                android:layout_width="match_parent"
                android:layout_marginTop="320dp"
                android:layout_height="wrap_content" android:id="@+id/subtask_create_button"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>

    </android.support.v7.widget.CardView>


</LinearLayout>