<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">


    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_id" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/status" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="2dp"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status" android:layout_marginTop="15dp"
            app:layout_constraintStart_toEndOf="@+id/tv_id" app:layout_constraintEnd_toStartOf="@+id/startDate"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="1dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/desc" app:layout_constraintStart_toStartOf="@+id/tv_id" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/endDate" android:layout_marginEnd="8dp"
            android:layout_marginTop="22dp" app:layout_constraintTop_toBottomOf="@+id/tv_id"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startDate" android:layout_marginTop="14dp"
            app:layout_constraintStart_toEndOf="@+id/status" app:layout_constraintEnd_toStartOf="@+id/endDate"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/endDate" android:layout_marginTop="13dp"
            app:layout_constraintStart_toEndOf="@+id/startDate" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="13dp"
    />
</android.support.constraint.ConstraintLayout>